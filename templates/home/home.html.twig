{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Egun on</h1>
    <div class="card">
{#        <img src="https://cdn.futura-sciences.com/buildsv6/images/wide1920/6/5/2/652a7adb1b_98148_01-intro-773.jpg" alt="tttt" class="card-img-top">#}
        <img src="https://aura-vert.fr/images/maraichage.jpg" alt="" class="card-img-top" width="300" height="250">
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if not app.user %}
        <h1>Veuillez vous connecter</h1>
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input placeholder="Adresse email..." requied name="_username" value ="{{lastUsername}}"
                       type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mod de passe..." requied name="_password"
                       type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
            <a href="/registration">Pas de compte ? Inscrivez-vous</a>
        </form>
        <div class="card border-primary mt-3 mb-3">
        <div class="card-header">Identifiants stockés en base de données</div>
        <div class="card-body">
            <p class="card-text">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Mot de passe</th>
                    <th scope="col">Rôle</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>admin@sn.eh</td>
                    <td>useruser</td>
                    <td>ROLE_USER, ROLE_ADMIN</td>
                </tr>
                </tbody>
            </table>
            </p>
        </div>
    {% endif %}
    </div>
{% endblock %}